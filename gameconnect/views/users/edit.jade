extends ../layout

block content
  .centered
    h1.centered-text Edit User Details
    form.pure-form.pure-form-aligned.reg_form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
      fieldset
        .pure-control-group
          label(for='username') Username
          input#inputUsername(type='text', value='#{user.username}', name='username')
        .pure-control-group
          label(for='email') Email
          input#inputEmail(type='email', value='#{user.email}', name='email')
        .pure-control-group
          label(for='password') Password
          input#inputPassword(type='password', value='#{user.password}', name='password')
        .pure-control-group
          input(type='hidden',value='PUT',name='_method')
        br
        div
          button.pure-button.pure-button-primary.reg_form_submit(type='submit') Update
      br
      br
      br

      br
      br
  br
  br
  br
