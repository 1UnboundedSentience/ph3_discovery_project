block content
    h1.
        User ID #{user._id}
    form(action='/users/#{user._id}/edit',method='post',name='updateuser',enctype='application/x-www-form-urlencoded')
        p Username:
            input#inputUsername(type='text', value='#{user.username}', name='username')
        p Email:
            input#inputEmail(type='email', value='#{user.email}', name='email')
        p Password:
            input#inputPassword(type='password', value='#{user.password}', name='password')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update
