block content
    h1.
        Game ID #{game._id}
    form(action='/games/#{game._id}/edit',method='post',name='updategame',enctype='application/x-www-form-urlencoded')
        p Title:
            input#inputTitle(type='text', value='#{game.title}', name='title')
        p Platform:
            input#inputPlatform(type='text', value='#{game.platform}', name='platform')
        p Developer:
            input#inputDeveloper(type='text', value='#{game.developer}', name='developer')
        p Genre:
            input#inputGenre(type='text', value='#{game.genre}', name='genre')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update
